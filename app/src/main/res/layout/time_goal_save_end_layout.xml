<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/tgsel">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="148dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/npMinutes"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/minutes" />

        <ImageView
            android:id="@+id/addSave"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/saves"
            app:srcCompat="@drawable/baseline_front_hand_24" />

        <ImageView
            android:id="@+id/addGoal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/gaols"
            android:src="@drawable/handball" />

        <Button
            android:id="@+id/endMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/backGround"
            android:gravity="center"
            android:text="@string/endMatch" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>